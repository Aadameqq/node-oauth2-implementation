{
  "compilerOptions": {
    "target": "es2021",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "noEmit": false,

    "module": "commonjs",
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
